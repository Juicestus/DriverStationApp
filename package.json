{
  "name": "frc-driver-station-app",
  "description": "FRC driver station app for HUD, dashboard, and NT data inspection",
  "version": "1.0.0",
  "author": "frc2881",
  "license": "MIT",
  "private": true,
  "main": "app/main.js",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "npm-run-all build:*",
    "build:init": "node scripts/build-init.mjs",
    "build:main": "tsc -p tsconfig-main.json",
    "build:ui": "rollup -c --bundleConfigAsCjs",
    "dist": "electron-builder --win",
    "package": "npm-run-all build dist",
    "start": "electron .",
    "watch": "rollup -cw --bundleConfigAsCjs",
    "dev": "npm-run-all build --parallel start watch"
  },
  "build": {
    "appId": "FRC.DriverStationApp.1.0.0",
    "productName": "FRCDriverStationApp",
    "copyright": "Copyright (c) 2023 FRC Team 2881",
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}.${ext}",
      "compression": "store",
      "icon": "resources/app-icon.png"
    }
  },
  "dependencies": {
    "ws": "^8.14.0",
    "@msgpack/msgpack": "^2.8.0",
    "minimist": "^1.2.8",
    "dayjs": "^1.11.9",
    "plotly.js-basic-dist-min": "^2.26.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.5",
    "@types/minimist": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "fs-extra": "^11.1.1",
    "electron": "^26.2.0",
    "electron-packager": "^17.1.2",
    "electron-builder": "^24.6.4",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "@tsconfig/svelte": "^5.0.2",
    "rollup": "^3.29.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-svelte": "^7.1.6",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "postcss": "^8.4.29",
    "postcss-nesting": "^12.0.1",
    "postcss-url": "^10.1.3",
    "@types/postcss-url": "^10.0.0",
    "svelte": "^4.2.0",
    "svelte-preprocess": "^5.0.4",
    "carbon-preprocess-svelte": "^0.10.0",
    "carbon-components-svelte": "^0.80.0",
    "carbon-icons-svelte": "^12.3.0",
    "carbon-pictograms-svelte": "^12.8.0",
    "svelte-plotly.js": "^0.3.2",
    "@types/plotly.js": "^2.12.26"
  },
  "volta": {
    "node": "18.17.1",
    "pnpm": "8.7.4"
  }
}
