{
  "name": "driver-station-app",
  "description": "FRC driver station app for HUD, dashboard, and debug",
  "version": "1.0.0",
  "author": "frc2881",
  "license": "MIT",
  "private": true,
  "main": "app/main.js",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "npm-run-all build:*",
    "build:init": "node scripts/build-init.mjs",
    "build:main": "tsc -p tsconfig-main.json",
    "build:ui": "rollup -c --bundleConfigAsCjs",
    "watch": "rollup -c --bundleConfigAsCjs -w",
    "start": "electron . --ntServerAddress=10.28.81.2",
    "dev": "npm-run-all build --parallel start watch",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "FRC.DriverStationApp.1.0.0",
    "productName": "FRCDriverStationApp",
    "copyright": "Copyright (c) 2022 FRC Team 2881",
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}.${ext}",
      "compression": "store",
      "icon": "resources/app-icon.png"
    }
  },
  "dependencies": {
    "ws": "^8.11.0",
    "cbor": "^8.1.0",
    "@msgpack/msgpack": "^2.8.0",
    "minimist": "^1.2.7"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "electron": "^21.2.0",
    "electron-reload": "v2.0.0-alpha.1",
    "electron-packager": "^17.1.1",
    "electron-builder": "^23.6.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "@tsconfig/svelte": "^3.0.0",
    "@types/postcss-url": "^10.0.0",
    "@types/ws": "^8.5.3",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^4.2.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "postcss": "^8.4.18",
    "postcss-url": "^10.1.3",
    "svelte": "^3.52.0",
    "svelte-preprocess": "^4.10.7",
    "@types/minimist": "^1.2.2"
  },
  "volta": {
    "node": "18.12.1",
    "yarn": "1.22.19"
  }
}
